{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ES2018",
      "DOM"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "./types/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "**/dist/*"
  ]
}